<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="start-state">

	<var name="jsfUtil" class="com.dmytro.realty.web.flow.jsf.JSFUtil" />
	<var name="preferences" class="com.dmytro.realty.web.flow.jsf.UserPreferencesBean" />

	<input name="state" required="false" type="int" />

	<!-- TODO more accurate decision, based on spring security -->
	<decision-state id="start-state">	
		<if then="personal-cabinet" else="wizard-page" test="state == 1" />
	</decision-state>

	<view-state id="wizard-page" view="wizard.xhtml">
		<on-entry>
			<evaluate expression="realtyController.getWizard(preferences)" result="viewScope.currentState"></evaluate>
		</on-entry>
	</view-state>

	<view-state id="personal-cabinet" view="personalCabinet.xhtml">
		<secured attributes="ROLE_USER" />
		<on-entry>
			<evaluate expression="realtyController.getCabinet(preferences)" result="viewScope.currentState"></evaluate>
		</on-entry>
	</view-state>

	<end-state id="end" view=""></end-state>

	<global-transitions>
		<transition on="saveState">
			<evaluate expression="realtyController.saveState(viewScope.currentState.preferences)" />
		</transition>		

		<transition on="goCabinet" to="personal-cabinet" />

		<transition on="exit" to="end" />
	</global-transitions>
</flow>