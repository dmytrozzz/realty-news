<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="start-state">

	<var name="jsfUtil" class="com.dmytro.realty.web.flow.jsf.JSFUtil" />

	<on-start>
		<evaluate expression="realtyController.getPreferences()" result="flowScope.preferences" />
	</on-start>

	<decision-state id="start-state">
		<if then="personal-cabinet" else="home-page" test="realtyController.isAuthorized()" />
	</decision-state>

	<view-state id="home-page" view="home.xhtml">
		<on-entry>
			<evaluate expression="realtyController.getWizard(preferences)" result="viewScope.currentState" />
		</on-entry>
	</view-state>


	<action-state id="wizard-page">
		<on-entry>
			<evaluate expression="realtyController.getWizard(preferences)" result="viewScope.currentState" />
		</on-entry>
	</action-state>

	<view-state id="personal-cabinet" view="personalCabinet.xhtml">
		<secured attributes="ROLE_USER" />
		<on-entry>
			<evaluate expression="realtyController.getCabinet(preferences)" result="viewScope.currentState" />
		</on-entry>

		<transition on="runService">
			<evaluate expression="realtyController.runService(preferences.user)" />
		</transition>

		<!-- TODO very important part related to pay money system -->
		<transition on="payForService">
			<evaluate expression="realtyController.payForService(preferences.user)" />
		</transition>
	</view-state>

	<end-state id="end" view=""></end-state>

	<global-transitions>
		<transition on="saveUser">
			<evaluate expression="realtyController.saveUser(preferences)" />
		</transition>

		<transition on="goCabinet" to="personal-cabinet" />
		<transition on="goWizard">
			<evaluate expression="realtyController.getWizard(preferences)" result="viewScope.currentState" />
		</transition>

		<transition on="exit" to="end" />
	</global-transitions>
</flow>