<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="realty-home">

	<view-state id="realty-home" view="homePage.xhtml">
		<on-entry>
			<evaluate expression="realtyController.getWizard()" result="viewScope.currentState"></evaluate>
		</on-entry>
	</view-state>

	<view-state id="personal-cabinet" view="personalCabinet.xhtml">
		<on-entry>
			<evaluate expression="realtyController.getCabinet()" result="viewScope.currentState"></evaluate>
		</on-entry>
	</view-state>

	<end-state id="end" view="" />

	<global-transitions>
		<transition on="saveUser">
			<evaluate expression="realtyController.saveUser(viewScope.currentState.preferences.user)" />
		</transition>
		<transition on="saveNewsFeed">
			<evaluate expression="realtyController.saveNewsFeed(viewScope.currentState.preferences)" />
		</transition>

		<transition on="goCabinet" to="personal-cabinet" />
		<transition on="goHome" to="realty-home" />
		<transition on="exit" to="end" />
	</global-transitions>
</flow>